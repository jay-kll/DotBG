; Engine configuration file.
; It's best edited using the editor UI and not directly,
; since the parameters that go here are not all obvious.
;
; Format:
;   [section] ; section goes between []
;   param=value ; assign values to parameters

config_version=5

[application]

config/name="Depths of the Bastard God"
run/main_scene="res://scenes/main/main.tscn"
config/features=PackedStringArray("4.4", "Mobile")
config/icon="res://icon.png"

[autoload]

GameManager="*res://scripts/autoload/game_manager.gd"
PlayerStats="*res://scripts/autoload/player_stats.gd"
SaveSystem="*res://scripts/autoload/save_system.gd"
EventBus="*res://scripts/autoload/event_bus.gd"

[display]

window/size/viewport_width=1920
window/size/viewport_height=1080
window/size/window_width_override=960
window/size/window_height_override=540
window/stretch/mode="canvas_items"
window/stretch/aspect="keep"
window/handheld/orientation="landscape"

[input]

move_up={
"deadzone": 0.5,
"events": []
}
move_down={
"deadzone": 0.5,
"events": []
}
move_left={
"deadzone": 0.5,
"events": []
}
move_right={
"deadzone": 0.5,
"events": []
}
attack={
"deadzone": 0.5,
"events": []
}
dodge={
"deadzone": 0.5,
"events": []
}
interact={
"deadzone": 0.5,
"events": []
}
inventory={
"deadzone": 0.5,
"events": []
}
pause={
"deadzone": 0.5,
"events": []
}

[input_devices]

pointing/emulate_touch_from_mouse=true

[layer_names]

2d_physics/layer_1="World"
2d_physics/layer_2="Player"
2d_physics/layer_3="Enemy"
2d_physics/layer_4="PlayerHurtbox"
2d_physics/layer_5="EnemyHurtbox"
2d_physics/layer_6="Items"
2d_physics/layer_7="Interactables"

[rendering]

textures/canvas_textures/default_texture_filter=0
renderer/rendering_method="mobile"
textures/vram_compression/import_etc2_astc=true
anti_aliasing/quality/msaa_2d=2

[xr]

shaders/enabled=true
